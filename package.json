{
  "name": "@vollowx/see",
  "version": "0.1.2",
  "description": "Standard Extensible Elements. A web components library that can be styled and extended freely, while pre-providing components in Material 3 design guideline.",
  "author": "vollowx",
  "license": "MIT",
  "type": "module",
  "main": "./src/all.js",
  "module": "./src/all.js",
  "exports": {
    ".": "./src/all.js",
    "./m3/*": "./src/m3/*.js",
    "./base/*": "./src/base/*.js"
  },
  "files": [
    "src/**/*.js",
    "src/**/*.d.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "web-components",
    "material-design",
    "material-3",
    "lit",
    "ui-components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vollowx/see.git"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "wds --watch --node-resolve",
    "dev:styles": "node scripts/convert-styles.mjs watch",
    "build": "bun run build:styles && bun run build:components",
    "build:styles": "node scripts/convert-styles.mjs build",
    "build:components": "tsc",
    "cleanup": "node scripts/cleanup.mjs",
    "prepublishOnly": "bun cleanup && bun run build",
    "format": "prettier . --check",
    "format:fix": "prettier . --check --write",
    "format:sortcss": "bunx postcss \"src/**/*.css\" --replace --no-map"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-esbuild": "^1.0.4",
    "chokidar": "^5.0.0",
    "lightningcss": "^1.30.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-sorting": "^9.1.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "lit": "^3.3.2",
    "tslib": "^2.8.1"
  }
}
