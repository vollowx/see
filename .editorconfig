root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,yml,yaml}]
indent_size = 2
indent_style = space

[*.{ts,js,mjs}]
indent_size = 2
indent_style = space

[*.{css,html}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
