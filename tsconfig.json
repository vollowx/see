{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": ["**/*.js", "**/*.ts"]
}
